<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RegistrationForm" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <!-- Dark mode -->
    <!-- Screen background if dark mode on -->
    <style name="SCREEN">
        <item name="android:textColor">@color/teal_200</item>
    </style>
    <!-- TeEditTexts background if dark mode on -->
    <style name="EDITTEXT">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/hint</item>
    </style>
    <!-- TeEditTexts background if dark mode on -->
    <style name="TEXTVIEW">
        <item name="android:textColor">@color/teal_200</item>
    </style>
    <!-- Button background if dark mode on-->
    <style name="BUTTON">
        <item name="android:backgroundTint">@color/teal_200</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>